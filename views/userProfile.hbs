<div id="userform">
  <h2 class="animate__animated animate__flash">Profile</h2>
  <form action="/profile" method="POST" class="userProfile">

    <label for="username">
      Username</label>
    <input
      type="text"
      name="username"
      placeholder="Your username"
      value={{userFound.username}}
    />

    <label for="email">
      Email</label>
    <input type="email" name="email" placeholder="Your email" />

    <label for="password">
      Password</label>
    <input type="password" name="password" placeholder="Your password" />

    <button class="save" type="submit">Save</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>