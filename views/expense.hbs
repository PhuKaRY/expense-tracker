<h1>Hey {{currentUser.username}}! this is what you have spent</h1>
<table>
  <thead>
    <tr>
      <td>Date</td>
      <td>Price</td>
      <td>Tag</td>
      <td>Category</td>
    </tr>
  </thead>
  <tbody>
    {{#each expense}}
      <tr>
        <td>{{date}}</td>
        <td>{{price}}</td>
        <td>{{tag.name}}</td>
        <td>{{category}}</td>
        <td>
          <a href="/main/expense-edit/{{_id}}" class="pencil"><i
              class="fas fa-edit"
              aria-hidden="true"
            ></i></a>
        </td>
        <td>
          <button class="btn-delete"><i class="fas fa-eraser"></i></button>
          <form
            class="hidden"
            action="/main/expense-delete/{{_id}}"
            method="post"
          >
            <button type="submit btn-delete">confirm</button>
            <button type="button" class="cancel-btn btn-delete">cancel</button>
          </form>
        </td>
      </tr>

    {{/each}}
    <td>
      Total expenses
    </td>
    <td>
      {{total}}
    </td>
  </tbody>
</table>