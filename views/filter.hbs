<form class="animate__animated animate__wobble">

  <label for="tag">Make your choice<i class="fas fa-hand-point-down"></i>
  </label>
  <select name="tag" id="tag">
    <option value="house">House</option>
    <option value="party">Party</option>
    <option value="transport">Transport</option>
    <option value="food">Food</option>
    <option value="shopping">Shopping</option>
  </select>
</form>

<table class="filter-table animate__animated animate__backInUp">

  <thead>
    <tr>
      <th>Date</th>
      <th>Price</th>
      <th>Tag</th>
      <th>Category</th>
    </tr>
  </thead>
  <tbody>
    <tr>

      <td class="m">Let's</td>
      <td class="o">Save</td>
      <td class="n">Your</td>
      <td class="e">Money</td>

    </tr>
    <tfoot class="total">
      <tr>
        <th>Total:<span id="totalPrice"></span><span>$</span></th>
      </tr>
    </tfoot>
  </tbody>

</table>
<template id="my-template">

  <tr id="tr">
    <td id="date"></td>
    <td id="price"></td>
    <td id="tagName"></td>
    <td id="category"></td>
    <td>
      <a id="link"></a>
    </td>

  </tr>

  {{!-- {{<td>Total expenses</td> }}
    <td>{{total}}</td> --}}
</template>